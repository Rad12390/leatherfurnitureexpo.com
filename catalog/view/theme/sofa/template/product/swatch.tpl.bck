			function validate(form)
			{
				
                               
				// BEGIN CHECK FOR AT LEAST 1 COLOR CHECKBOX CHECKED --- IMPERIAL WEB SOLUTIONS AUGUST 8, 2011
				if(checkbox_checked(form)=='min')
